pipeline {
    agent any
        
    stages {
        stage ('Compile Stage') {
            steps{
                tool name: 'Maven_3.6.0', type: 'maven' {
                    sh 'mvn clean compile'
                }
            }
        }
    
        stage ('Testing Stage') {
            steps {
                wtool name: 'Maven_3.6.0', type: 'maven' {
                    sh 'mvn test'
                }
            }
        }

        stage ('Deployment Stage') {
            steps {
                tool name: 'Maven_3.6.0', type: 'maven' {
                    sh 'mvn deploy'
                }
            }
        }
    }
}